{
  "name": "@kkmb/logger",
  "version": "1.0.1",
  "description": "A simple logging for server side js",
  "main": "index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "copy": "copy package.json dist\\ && copy README.md dist\\",
    "build": "rmdir /s /q dist\\ && npx tsc && npm run copy && cd dist\\ && npm pack && move kkmb-logger-1.0.1.tgz ../ ",
    "start:dev": "node --watch dist/index.js"
  },

  "keywords": [
    "log",
    "logs",
    "logger",
    "logging",
    "console",
    "level",
    "info",
    "trace",
    "debug",
    "warn",
    "error",
    "pino",
    "winston"
  ],
