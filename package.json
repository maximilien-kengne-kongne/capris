  "license": "MIT",

  "repository": {
    "type": "git",
    "url": "https://github.com/maximilien-kengne-kongne/capris.git"
  },
  "bugs": {
    "url": "https://github.com/maximilien-kengne-kongne/capris/issues"
  },

  "devDependencies": {
    "@types/node": "^22.7.5",
    "typescript": "^5.6.3"
  }
}
